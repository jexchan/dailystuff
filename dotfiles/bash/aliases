alias duf='du -kd 1 | sort -nr | while read size fname; do for unit in  k M G T P E Z Y; do if [ $size -lt 1024 ]; then echo -e  "${size}${unit}\t${fname}"; break; fi; size=$((size/1024)); done; done'

alias dtree="ls -R | grep ":$" | sed -e 's/:$//' -e 's/[^-][^\/]*\//--/g'  -e 's/^/ /' -e 's/-/|/'"

#Shell Function
function take {
	mkdir $1
	cd $1
}

function build_book {
	cd ~/personal/opensource/hg/output/book_testing
	cp -r ~/personal/opensource/hg/private/book/enterprise_flex/* .
	make clean
	make html
	cp -rf _build/html ~/Sites
}

function build_cookbook {
	cd ~/personal/opensource/hg/output/cookbook_testing
	cp -r ~/personal/opensource/hg/private/blogposts/rst/cookbook/* .
	make clean
	make html
	cd _build/html
	mv cookbook.html index.html
}

function build_top10 {
	cd ~/personal/opensource/hg/output/top10_testing/
	cp ~/personal/opensource/hg/private/blogposts/rst/top10.rst .
	make clean
	make html
	cd _build/html
	mv top10.html index.html
}

function build_rst {
	cd ~/personal/opensource/hg/output/rst_testing/
	cp -r ~/personal/opensource/hg/private/rst/* .
	make clean
	make html
}

function startservice {
	cd /Users/jexchan/active/fnd-webserver-endurance/config
	./start_service.sh
	tail -f ../../logs/FndWebserverEndurance1.log
}

function start_tomcat {
	cd /usr/local/Tomcat/bin
	sh shutdown.sh
	sh startup.sh
	tail -f /usr/local/Tomcat/logs/catalina.out
}


